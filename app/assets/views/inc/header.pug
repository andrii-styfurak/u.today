header.header
  .header__container
    a.header__logo(href="#!")

    .header__social.social
      a.social__link.social__link--fb(href="#!")
      a.social__link.social__link--tg(href="#!")
      a.social__link.social__link--tw(href="#!")
      a.social__link.social__link--em(href="#!")

    nav.header__nav
      ul.header__nav-list
        each category, i in nav
          li.header__nav-item(class=[ category.childs ? 'header__nav-item--arrow' : '' ] class=[ i == 1 ? 'header__nav-item--active' : '' ])
            a.header__nav-link(href="#!")= category.name

            if category.childs
              ul.header__nav-child-list
                each child, i in category.childs
                  li.header__nav-child-item(class=[ i == 1 ? 'header__nav-child-item--active' : '' ])
                    a.header__nav-child-link(href="#!")= child.name

    .header__panel
      button.header__search.btn.btn--light.btn--search

      button.header__account.btn.btn--light.btn--account

      //- button.header__account.btn.btn--light.btn--account
        img.header__account-img(src="https://dummyimage.com/32x32/d8dbde/aaa")

      button.header__burger.btn.btn--light.btn--burger

      .header__lang.btn.btn--arrow-down ENG