.currencies
  .currencies__container.container

    .currencies__slider-wrapper
      .currencies__slider
        each currencie in currencies
          a.currencies__link(href="#!")
            .currencies__info
              .currencies__name= currencie.name
              .currencies__trand(class=[ currencie.down ? 'currencies__trand--down' : '' ])= currencie.trand
            .currencies__price= currencie.price

    .btn.btn--arrow-down USD