.currencies
  .currencies__container.container

    .currencies__slide-wrapper
      .currencies__slide
        each currencie in currencies
          a.currencies__link(href="#!")
            .currencies__info
              .currencies__name= currencie.name
              .currencies__trand(class=[ currencie.down ? 'currencies__trand--down' : '' ])= currencie.trand
            .currencies__price= currencie.price

    button.currencies__currency.dropdown
      span(v-text="currency")

      .dropdown__list
        each lang in ['usd', 'eur', 'rub']
          .dropdown__item(
            v-on:click.stop:="currency = '" + lang + "'"
            v-show="currency !== '" + lang + "'"
          )= lang