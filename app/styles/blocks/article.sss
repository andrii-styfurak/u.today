.article

  &__summary
    box: center
    margin-bottom: 1.3rem

    &-device
      display: block @xl none
      margin: .9rem * .6rem

    &-category,
    &-time
      display: none @xl block

    &-bookmarks
      font-size: @xl-down 0

      &:before
        margin-right: @xl-down 0

  &__info
    box: center
    margin-bottom: 1.3rem

  &__panel
    box: center
    margin-bottom: 3.2rem

    &--border
      border: $border
      border-radius: 2px
      min-height: 48px
      padding: * 1.1rem

    &-separator
      border-right: $border
      height: 46px
      margin: * 1.1rem

  &__title
    margin-top: 0
    margin-bottom: .8rem

    &-mark
      text: $body-tiny
      text: $pseudo-neutral-900
      margin-left: .4rem

  &__mark
    text: $body-standart @xl $body-large
    text: $pseudo-neutral-900
    margin-top: 0
    margin-bottom: 1rem @xl 1.4rem

  &__main-img
    position: absolute 0 null null 0
    @extend .img

    &-wrapper
      background: $pseudo-neutral-50
      padding-top: 63.0434783%
      position: relative

  &__content
    margin-bottom: 2.3rem

    > *:last-child
      margin-bottom: 0 !important

  &__contents
    margin: 3.4rem * 2.6rem

    &-title
      text: $header-tiny
      margin-bottom: 1.6rem

    &-list
      @extend .list-reset

    &-item
      box: center
      margin-bottom: 1.45rem

      & + &
        margin-top: .8rem

      &:before
        content: ""
        display: block
        background: svg-load("icons/triangle_down.svg" fill: $pseudo-neutral-100)
        size: 24px
        margin-right: .5rem

    &-link
      height: 22px

  &__related
    background: $neutral-100
    padding: 2rem 2rem 1.4rem
    margin: 3.4rem * 3.1rem
    box: left

    &-title
      text: $header-tiny
      margin-bottom: .7rem

    &-link
      text: $body-large
      padding-right: 2rem

    &-panel
      margin-top: .5rem
      box: center

  &__subscribe
    border: $border
    border-radius: 2px
    padding: 1.4rem 2rem 1.5rem
    margin: 3.4rem * 3.4rem
    box: left

    &-col
      & + &
        margin-left: 2rem

      &:first-child
        width: 100%

    &-title
      text: $header-tiny
      margin-bottom: 1.6rem

    &-form
      margin-bottom: 1rem

    &-input
      width: 100%

  &__fact
    background: $neutral-100
    padding: 3.4rem 2rem
    margin: 3.3rem * 3.1rem

    &-title
      text: $header-large center
      margin-bottom: 2.4rem

    &-text
      text: $body-large center

  &__tags
    margin-bottom: 1.5rem

  &__recommended
    margin-bottom: 3rem

    &-header
      box: center
      margin-bottom: 1.5rem

    &-title
      text: $header-tiny
      margin-right: 1.5rem

    &-list
      box:

    &-item
      width: 33%

      & + &
        margin-left: 2rem

      &-title

    &-img
      display: block
      max-width: 100%
      width: 100%
      margin-bottom: 0.7rem
      border-radius: 2px
      border: $border

    &-link
      text: $body-small
      margin-bottom: .1rem
      display: block
      @extend .link-plain

    &-info
      box: center