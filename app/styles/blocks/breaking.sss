.breaking
  background: $neutral-100
  box: center
  margin: 1.5rem * 2rem
  padding: 1rem
  @extend .link-plain

  &__label
    margin-right: 1.5rem

  &__title
    text: $header-super-tiny @xl $header-tiny

    &:after
      content: ""
      display: inline-block
      background-image: svg-load("icons/triangle_right.svg", fill: $accent-2-medium)
      size: 18px
      margin-left: .4rem
