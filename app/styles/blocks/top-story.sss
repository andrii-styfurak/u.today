.top-story
  border: $border
  border-radius: 2px
  height: 100%

  &__link
    @extend .link-plain

  &__img
    @extend .img-cover
    border-radius: 2px 2px 0 0

    &-wrapper
      @extend .img-cover-wrapper
      padding-top: 61.5384615%

  &__title
    text: $header-tiny @xl $header-small
    padding: 1.6rem 1.9rem 0.8rem

  &__info
    box: center
    padding: 0 1.9rem 1rem