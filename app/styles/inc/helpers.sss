.btns-spacer
  box: wrap
  margin-bottom: -.5rem

  > *
    margin: * .5rem .5rem *

.links-spacer
  > *
    margin-right: .5rem

.list-reset
  list-style: none
  padding: 0
  margin: 0

.title-mark
  text: $body-tiny
  display: inline-block
  margin-left: 0.2rem

.img
  display: block
  max-width: 100%

.hide

  &-xl-down
    display: @xl-down none

  &-xl-only
    display: @xl none