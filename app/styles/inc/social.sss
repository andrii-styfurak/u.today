.social
  display: inline-flex
  align-items: center
  justify-content: space-between

  &--border
    border: $border
    border-radius: 2px
    width: @md-down 100%

    ^&__link
      width: 100% @md 2.45rem @xl 4rem
      height: 38px

      & + ^^&__link
        border-left: $border

  &--wide
    ^&__link
      width: 2.7rem @xl 4.5rem

  &__link
    size: 1.5rem
    background-position: center
    background-repeat: no-repeat

    &--fb
      background-image: svg-load("icons/social/facebook.svg" fill: $pseudo-neutral-100)

      &:hover
        background-image: svg-load("icons/social/facebook.svg" fill: #3B5998)

      &:active
        background-image: svg-load("icons/social/facebook.svg" fill: $pseudo-neutral-900)

    &--tg
      background-image: svg-load("icons/social/telegram.svg" fill: $pseudo-neutral-100)

      &:hover
        background-image: svg-load("icons/social/telegram.svg" fill: #0088CC)

      &:active
        background-image: svg-load("icons/social/telegram.svg" fill: $pseudo-neutral-900)

    &--tw
      background-image: svg-load("icons/social/twitter.svg" fill: $pseudo-neutral-100)

      &:hover
        background-image: svg-load("icons/social/twitter.svg" fill: #1DA1F2)

      &:active
        background-image: svg-load("icons/social/twitter.svg" fill: $pseudo-neutral-900)

    &--em
      background-image: svg-load("icons/social/email.svg" fill: $pseudo-neutral-100)

      &:hover
        background-image: svg-load("icons/social/email.svg" fill: $accent-1-medium)

      &:active
        background-image: svg-load("icons/social/email.svg" fill: $pseudo-neutral-900)

    &--yt
      background-image: svg-load("icons/social/youtube.svg" fill: $pseudo-neutral-100)

      &:hover
        background-image: svg-load("icons/social/youtube.svg" fill: #ff0000)

      &:active
        background-image: svg-load("icons/social/youtube.svg" fill: $pseudo-neutral-900)

    &--rd
      background-image: svg-load("icons/social/reddit.svg" fill: $pseudo-neutral-100)

      &:hover
        background-image: svg-load("icons/social/reddit.svg" fill: #ff4500)

      &:active
        background-image: svg-load("icons/social/reddit.svg" fill: $pseudo-neutral-900)

    &--rs
      background-image: svg-load("icons/social/rss.svg" fill: $pseudo-neutral-100)

      &:hover
        background-image: svg-load("icons/social/rss.svg" fill: #f26522)

      &:active
        background-image: svg-load("icons/social/rss.svg" fill: $pseudo-neutral-900)
